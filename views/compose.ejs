<%- include("partials/header") -%>

<h1>Compose</h1>
<form class="item" action="/compose" method="post">

  <div class="form-group">
    <label for="postTitle">Title</label>
    <input type="text" class="form-control" name="postTitle">
    <label for="postBody">Post</label>
    <textarea name="postBody" class="form-control" rows="5" cols="30"></textarea>
    <label for="postSource">Source</label>
    <input type="text" class="form-control" name="postSource">

  </div>

  <button type="submit" class="btn btn-primary" name="button">Publish</button>

</form>


<%- include("partials/footer") -%>
